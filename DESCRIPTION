Package: admiralophtha
Type: Package
Title: ADaM in R Asset Library - Ophthalmology
Version: 0.0.1
Authors@R: c(
    person("Gordon", "Miller", email = "gordon.miller@roche.com", role = c("aut", "cre")),
    person("Edoardo", "Mancini", role = "aut"),
    person("Lucy", "Palmen", role = "aut")
